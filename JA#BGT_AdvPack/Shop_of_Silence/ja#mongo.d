BEGIN JA#MONGO

IF ~InParty("ALORA")Global("JA#MONGO_ALORA","LOCALS",0)~ THEN BEGIN JA#MONGO_1
SAY @0
IF ~~ THEN DO ~SetGlobal("JA#MONGO_ALORA","LOCALS",1)~ EXIT
END

IF ~InParty("CORAN")Global("JA#MONGO_CORAN","LOCALS",0)~ THEN BEGIN JA#MONGO_2
SAY @1
IF ~~ THEN DO ~SetGlobal("JA#MONGO_CORAN","LOCALS",1)~ EXIT
END

IF ~RandomNum(4,1)~ THEN BEGIN JA#MONGO_3
SAY @2
IF ~~ THEN EXIT
END

IF ~RandomNum(4,2)~ THEN BEGIN JA#MONGO_4
SAY @3
IF ~~ THEN EXIT
END

IF ~RandomNum(4,3)~ THEN BEGIN JA#MONGO_5
SAY @3
IF ~~ THEN EXIT
END

IF ~RandomNum(4,4)~ THEN BEGIN JA#MONGO_6
SAY @4
IF ~~ THEN EXIT
END


//INTERJECTIONS

INTERJECT_COPY_TRANS2 JA#MONGO JA#MONGO_1 JA#alora_mongo1
== "%ALORA_JOINED%" IF ~InParty("ALORA") InMyArea("ALORA") !StateCheck("ALORA",CD_STATE_NOTVALID)~ THEN
@5
= @6
== "%EDWIN_JOINED%" IF ~InParty("EDWIN") InMyArea("EDWIN") !StateCheck("EDWIN",CD_STATE_NOTVALID)~ THEN
@7
== "%QUAYLE_JOINED%" IF ~InParty("EDWIN") InMyArea("EDWIN") !StateCheck("EDWIN",CD_STATE_NOTVALID) InParty("QUAYLE") InMyArea("QUAYLE") !StateCheck("QUAYLE",CD_STATE_NOTVALID)~ THEN
@8
== "%EDWIN_JOINED%" IF ~InParty("EDWIN") InMyArea("EDWIN") !StateCheck("EDWIN",CD_STATE_NOTVALID) InParty("QUAYLE") InMyArea("QUAYLE") !StateCheck("QUAYLE",CD_STATE_NOTVALID)~ THEN
@9
END

INTERJECT_COPY_TRANS2 JA#MONGO JA#MONGO_2 JA#coran_mongo1
== "%CORAN_JOINED%" IF ~InParty("CORAN") InMyArea("CORAN") !StateCheck("CORAN",CD_STATE_NOTVALID)~ THEN
@10
END
