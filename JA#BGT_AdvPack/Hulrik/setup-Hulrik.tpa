	/* prevent Xvarts from disappearing - BGT */
	COPY_EXISTING ~XVARTH.BCS~ ~override~
		DECOMPILE_AND_PATCH BEGIN
			REPLACE_TEXTUALLY CASE_INSENSITIVE ~IF[%WNL%%MNL%%LNL%%TAB% ]+Dead("Mulahey")[%WNL%%MNL%%LNL%%TAB% ]+THEN[%WNL%%MNL%%LNL%%TAB% ]+RESPONSE #100[%WNL%%MNL%%LNL%%TAB% ]+DestroySelf()[%WNL%%MNL%%LNL%%TAB% ]+END~ ~~
