// In BGEE/EET: Fix state connection for specific response
COPY_EXISTING ~HALBAZ.DLG~ ~override~
    READ_LONG 0x14 ofs_responses
    READ_LONG 0x10 num_responses
	SET responses_end = ofs_responses + (num_responses * 0x20)

	FOR (response = ofs_responses; response < responses_end; response+=0x20) BEGIN
		READ_LONG (response + 0x04) strref
		PATCH_IF ((strref MODULO 20000) = 192) BEGIN
			WRITE_BYTE (response + 0x1c) 7 // next state
		END
	END
BUT_ONLY

