BEGIN ~JA#SUTHI~

IF ~NumTimesTalkedTo(0)~ THEN 0
  SAY @0
  IF ~~ THEN REPLY @1 DO ~SetGlobal("JA#SUTHI_WHY","LOCALS",1)~ JOURNAL @2 GOTO 1
  IF ~~ THEN REPLY @3 DO ~SetGlobal("JA#SUTHI_OFF","LOCALS",1)~ GOTO 2
  IF ~~ THEN REPLY @4 DO ~SetGlobal("JA#SUTHI_GUILD","LOCALS",1)~ GOTO 3
  IF ~~ THEN REPLY @5 GOTO 6
END

IF ~~ THEN 1
  SAY @6
  IF ~Global("JA#SUTHI_OFF","LOCALS",0)~ THEN REPLY @3 DO ~SetGlobal("JA#SUTHI_OFF","LOCALS",1)~ GOTO 2
  IF ~Global("JA#SUTHI_GUILD","LOCALS",0)~ THEN REPLY @4 DO ~SetGlobal("JA#SUTHI_GUILD","LOCALS",1)~ GOTO 3
  IF ~~ THEN REPLY @5 GOTO 6
END

IF ~~ THEN 2
  SAY @7
  IF ~~ THEN REPLY @8 GOTO 4
  IF ~~ THEN REPLY @9 GOTO 5
END

IF ~~ THEN 3
  SAY @10
  IF ~Global("JA#SUTHI_WHY","LOCALS",0)~ THEN REPLY @11 DO ~SetGlobal("JA#SUTHI_WHY","LOCALS",1)~ JOURNAL @2 GOTO 1
  IF ~Global("JA#SUTHI_OFF","LOCALS",0)~ THEN REPLY @3 DO ~SetGlobal("JA#SUTHI_OFF","LOCALS",1)~ GOTO 2
  IF ~~ THEN REPLY @5 GOTO 6
END

IF ~~ THEN 4
  SAY @12
  IF ~~ THEN DO ~EscapeArea()~ EXIT
END

IF ~~ THEN 5
  SAY @13
  IF ~Global("JA#SUTHI_WHY","LOCALS",0)~ THEN REPLY @11 DO ~SetGlobal("JA#SUTHI_WHY","LOCALS",1)~ JOURNAL @2 GOTO 1
  IF ~Global("JA#SUTHI_GUILD","LOCALS",0)~ THEN REPLY @4 DO ~SetGlobal("JA#SUTHI_GUILD","LOCALS",1)~ GOTO 3
  IF ~~ THEN REPLY @5 GOTO 6
END

IF ~~ THEN 6
  SAY @14
  IF ~~ THEN EXIT
END

IF ~ReactionGT(LastTalkedToBy,HOSTILE_UPPER)~ THEN 7
  SAY @15
  IF ~~ THEN EXIT
END

IF ~ReactionLT(LastTalkedToBy,NEUTRAL_LOWER)~ THEN 8
  SAY @16
  IF ~~ THEN EXIT
END

// END JA#SUTHI
